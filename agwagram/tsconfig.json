{
    "extends": "@imacdonald/phantom-config/tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@components/*": ["./src/components/*"],
            "@config": ["./src/config"],
            "@data": ["./src/data"],
            "@data/*": ["./src/data/*"],
            "@icons": ["./src/icons"],
            "@types": ["./src/types"],
            "@views": ["./src/views"]
        },
        "types": ["vite-plugin-svgr/client"]
    },
    "include": ["src", "types.d.ts"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
