{
    "extends": "phantom-config/tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@components": ["./src/components"],
            "@config": ["./src/config"],
            "@data/*": ["./src/data/*"],
            "@features": ["./src/features"],
            "@styles/*": ["./src/styles/*"],
            "@views": ["./src/views"]
        },
        "types": ["node", "vite-plugin-svgr/client"]
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
